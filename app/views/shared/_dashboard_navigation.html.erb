<header>
  <h1><%= link_to "Safecast", root_path %></h1>
  <nav class="navbar">
    <ul>
      <%- if user_signed_in? -%>
        <li <%= raw('class="active"') if controller_name == 'measurements' && action_name == 'new' %>>
          <%= link_to [:new, :measurement], :title => t('submit_a_reading') do %>
            <%= t('submit') %>
          <%- end -%>
        </li>
        <li <%= raw('class="active"') if controller_name == 'bgeigie_imports' && action_name == 'new' %>>
          <%= link_to [:new, :bgeigie_import], :title => t('upload') do %>
            <%= t('upload') %>
          <%- end -%>
        </li>
      <%- end -%>
        <li <%= raw('class="active"') if controller_name == 'bgeigie_imports' && ['show', 'index'].include?(action_name) %>>
          <%= link_to [:bgeigie_imports], :title => t('.imports') do %>
            <%= t('.imports') %>
          <%- end -%>
        </li>
        <li <%= raw('class="active"') if controller_name == 'measurements' && ['show', 'index'].include?(action_name) %>>
          <%= link_to [:measurements], :title => t(".measurements") do %>
            <%= t('.measurements') %>
          <%- end -%>
        </li>
        <li <%= raw('class="active"') if controller_name == 'devices' %>>
          <%= link_to [:devices], :title => t(".devices") do %>
            <%= t('.devices') %>
          <%- end -%>
        </li>

      <%- if user_signed_in? -%>
        <li class="dropdown">
          <%= link_to '#user-menu',
            :class => 'dropdown-toggle',
            :data => {:toggle => 'dropdown'} do %>
            <%= current_user.email %>
            <span class="caret"></span>
          <%- end -%>
          <ul class="dropdown-menu">
            <li>
              <%= link_to [:profile], :title => t("profile") do %>
                <%= t('profile') %>
              <%- end -%>
            </li>
            <li>
              <%= link_to t('sign_out'), logout_path %>
            </li>
          </ul>
        </li>
      <%- else -%>
        <li <%= raw('class="active"') if controller_name == 'sessions' && ['new'].include?(action_name) %>>
          <%= link_to t("sign_in"), new_user_session_path %>
        </li>
        <li <%= raw('class="active"') if controller_name == 'registrations' && ['new'].include?(action_name) %>>
         <%= link_to t("sign_up"), new_user_registration_path %>
        </li>
      <%- end -%>
    </ul>
  </nav>
</header>