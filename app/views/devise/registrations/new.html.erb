<div class="row">
  <div class="span9">

    <h2>Sign up</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= f.input :email %>
      <%= f.input :name %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>

      <div class="form-actions">
        <%= f.submit t('sign_up'), :class => 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
