<% root = Rails.root.join('app', 'views') -%>
window.Templates={<%- files = Dir[root.join('**', '*.mustache.*')] -%>
<%-  files.each do |f| -%>
<%- dir = File.dirname(f.to_s.gsub(root.to_s,'')).gsub(/^\//, '') -%>
<%  file = File.basename(f.to_s).gsub(/^([^\.]*)(\..*)/, '\1') %>"<%= dir%>/<%= file %>":<%= raw render(
      :template => "#{dir}/#{file}").to_json -%><%- if f != files.last -%>,<%- end -%>
<%- end -%>}
