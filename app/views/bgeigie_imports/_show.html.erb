<div class="row">
  <%= render 'static_metadata' %>
  <div class="span8">
    <dl class="dl-horizontal">
      <dt>
        <%= t('.description') %>
      </dt>
      <dd>
        <%- if @bgeigie_import.description.present? -%>
          <%= simple_format @bgeigie_import.description %>
        <%- else -%>
          <%= t('.none') %>
        <%- end -%>
      </dd>
      <dt>
        <%= t('.credits') %>
      </dt>
      <dd>
        <%= @bgeigie_import.credits.to_sentence if @bgeigie_import.credits.any? %>
        <%= t('.none') if @bgeigie_import.credits.none? %>
      </dd>
      <dt>
        <%= t('.height') %>
      </dt>
      <dd>
        <%= "#{@bgeigie_import.height}m" if @bgeigie_import.height.present? %>
        <%= t('.not_set') if @bgeigie_import.height.blank? %>
      </dd>
      <dt>
        <%= t('.orientation') %>
      </dt>
      <dd>
        <%= @bgeigie_import.orientation if @bgeigie_import.orientation.present? %>
        <%= t('.not_set') if @bgeigie_import.orientation.blank? %>
      </dd>
      <dt>
        <%= t('.cities') %>
      </dt>
      <dd>
        <%= @bgeigie_import.cities.to_sentence if @bgeigie_import.cities.present? %>
        <%= t('.not_set') if @bgeigie_import.cities.blank? %>
      </dd>
    </dl>
  </div>
</div>