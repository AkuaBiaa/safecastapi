<%= current_page_api_example :users_url %>

<div class="row">

  <div class="span3">
    <%= form_tag params.except(:commit).except(:utf8), :method => :get do %>

      <%= label_tag :name %>
      <%= text_field_tag :name, params[:name] %>

      <%= submit_tag t('filter') %>
    <%- end -%>
  </div>

  <div class="span9">
    <h2><%= t(".users") -%></h2>

    <table class="table table-striped">
      <thead>
        <th><%= t('id') %></th>
        <th><%= t('.name') %></th>
        <th><%= t('.number_of_measurements') %></th>
      </thead>
      <tbody>
        <%- @users.each do |user| -%>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= link_to user.name, user %>
            </td>
            <td><%= user.number_of_measurements %></td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
    <%= will_paginate @users %>
  </div>

</div>