<%= current_page_api_example :device_url %>

<div class="row">
  <div class="span12">
    <ul class="inline pull-right">
      <li>
        <%= link_to t('.add_a_device'), [:new, :device], :class => 'btn' %>
      </li>
    </ul>

    <h2><%= @device.manufacturer %> <%= @device.model %></h2>

    <dl class="dl-horizontal">
      <dt><%= t('.model') %></dt>
      <dd><%= @device.model %></dd>

      <dt><%= t('.sensor') %></dt>
      <dd><%= @device.sensor %></dd>

    </dl>
  </div>
</div>