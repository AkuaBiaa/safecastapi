<%= render 'my/layouts/submit_nav' %>
<div class="row">
  <section class="span3">
    <ul class="nav nav-stacked nav-pills">
      <li><%= link_to 'View your bGeigie log uploads', [:my, :bgeigie_imports] -%></li>
    </ul>
  </section>
  <section class="span9">
    <h2>Upload a bGeigie log file</h2>

    <%= form_for [:api, @bgeigie_import], :html =>{
      :class => 'form-horizontal'
    } do |f| %>
      <fieldset>
        <div class="control-group">
          <%= f.label :source, 'File', :class => 'control-label' %>
          <div class="controls">
            <%= f.file_field :source %>
          </div>
        </div>
      </fieldset>
      
      <fieldset>
        <p class="button">
          <%= f.submit 'Upload' %>
        </p>
      </fieldset>
    <%- end -%>
  </section>
</div>