<%= render 'my/layouts/submit_nav' %>
<div class="row">
  <section class="span9">
    <h2><%= t('upload_a_bgeigie_log_file') -%></h2>
    <%= form_for [:api, @bgeigie_import], :html =>{:class => 'form-horizontal'} do |f| %>
      <fieldset>
        <div class="control-group">
          <%= f.label :source, t('file'), :class => 'control-label' %>
          <div class="controls">
            <%= f.file_field :source %>
          </div>
        </div>
      </fieldset>
      
      <fieldset>
        <p class="button">
          <%= f.submit t('upload') %>
        </p>
      </fieldset>
    <%- end -%>
  </section>
</div>