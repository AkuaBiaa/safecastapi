%section.brief
  %header
    %h2 Review your Submission
  %form#manifest.manifest{:action => "/my/measurements"}
    %fieldset
      %header
        %h3 Reading
      .field
        %label{:for => "reading"} Reading
        %input#level.digit{:name => "value", :placeholder => "000", :type => "text", :value => "{{value}}"}/
      .field
        %label{:for => "unit"} Units
        %input#unit{:name => "unit", :placeholder => "", :type => "text", :value => "{{unit}}"}/
      .field
        %label{:for => "location"} Location
        %input#location{:name => "location", :placeholder => "", :type => "text", :value => "{{location_name}}"}/
      .field
        %label{:for => "latitude"} Latitude
        %input#latitude{:name => "latitude", :placeholder => "", :type => "text", :value => "{{latitude}}"}/
      .field
        %label{:for => "latitude"} Longitude
        %input#longitude{:name => "longitude", :placeholder => "", :type => "text", :value => "{{longitude}}"}/
    %fieldset
      %header
        %h3 Device
      .field
        %label{:for => "make"} Make
        %input#make{:name => "make", :placeholder => "Safecast", :type => "text"}/
      .field
        %label{:for => "model"} Model
        %input#model{:name => "model", :placeholder => "", :type => "text"}/
    %fieldset
      %header
        %h3 Environmental Details
      .field
        %label{:for => "height"} Height
        %input#height.digit{:name => "height", :placeholder => "1m", :type => "text"}/
      .field
        %label{:for => "surface"} Surface type
        %input#surface{:name => "surface", :placeholder => "Soil", :type => "text"}/
      .field
        %label{:for => "radiation"} Radiation type
        %input#radiation{:name => "radiation", :placeholder => "Air", :type => "text"}/
    %fieldset
      %p.button
        %input{:type => "submit", :value => "Confirm"}/