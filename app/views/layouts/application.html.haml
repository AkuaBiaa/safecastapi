!!! html5
%html
  %head
    %title Safecast
    = csrf_meta_tag
    = stylesheet_link_tag :application
    - if ENV['CONNECTION_STATUS'] != 'offline'
      = javascript_include_tag 'http://maps.googleapis.com/maps/api/js?key=AIzaSyA15g0-2g2c7LbKWwCJmJpQWbdntzXZshE&sensor=true'
      = javascript_include_tag 'http://use.typekit.com/tvi6mbv.js'
      :javascript
        try{Typekit.load();}catch(e){}
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
  %body
    %div.container
      %header
        %h1= link_to "Safecast", root_path
        %nav
          %ul
            %li
              = link_to "Api Docs", root_path
            - if user_signed_in?
              %li
                = link_to [:my, :profile], :title => 'Profile' do
                  Profile
              %li
                = link_to [:my, :measurements], :title => 'Measurements' do
                  Measurements
              %li
                = link_to [:my, :maps], :title => 'Maps' do
                  Maps
              %li
                = link_to '/my/measurements/new', :title => 'Submit a Reading', :data => {:pjax => true} do
                  Submit
              %li= link_to 'Sign out', logout_path
            - else
              %li
                = link_to "Sign up / Sign in", new_user_session_path
      %div#page
        = yield
      
      %footer
        %p Creative Commons Non-Commercial
    = javascript_include_tag :application