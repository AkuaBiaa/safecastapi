<section class="brief">
  <header>
    <h2>Contribute your Measurement</h2>
  </header>
  <form action="/my/measurements" autocomplete="off" id="submission">
    <fieldset class="level-reading">
      <div class="field reading">
        <label for='level'>Radiation Level</label>
        <input class="digit"
               type="text"
               name='level'
               id='level'
               value='{{value}}'>
        <ul class="units">
          <li data-value="cpm" class="unit cpm selected">
            Clicks per Minute
          </li>
          <li data-value="microsievert" class="unit microsievert">
            MicroSieverts per Hour
          </li>
        </ul>
      </div>
      <div class="field location">
        <label for='location'>Location</label>
        <input type='text'
               name='location'
               id='location'
               value="{{location}}">
        <ul class="units">
          <li class="gps selected">Location</li>
        </ul>
        <div class="map" id="map_canvas">
        </div>
      </div>
    </fieldset>
    <fieldset>
      <p class="button">
        <input type="submit" value="Submit">
      </p>
    </fieldset>
  </form>
</section>